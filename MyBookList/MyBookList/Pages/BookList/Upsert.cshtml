@page
@model MyBookList.Pages.BookList.UpsertModel
@{
}

<br />
<h2 class="text-info">@(Model.Book.ID != 0 ? "Edit" : "Create New") Book</h2>
<hr />
<div class="border container" style="padding: 30px">
    <form method="post">
        @if (Model.Book.ID != 0)
        {
            <input type="hidden" asp-for="Book.ID" />
        }
        <div asp-validation-summary="All"></div>
        <div class="form-group row mt-3 mb-3">
            <div class="col-4 text-right">
                <label asp-for="Book.Title"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Title" />
                <span asp-validation-for="Book.Title"></span>
            </div>
        </div>
        <div class="form-group row mt-3 mb-3">
            <div class="col-4 text-right">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author" />
                <span asp-validation-for="Book.Author"></span>

            </div>
        </div>
        <div class="form-group row mt-3 mb-3">
            <div class="col-4 text-right">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ISBN" />
                <span asp-validation-for="Book.ISBN"></span>

            </div>
        </div>
        <div class="form-group row mt-3 mb-3">
            <div class="col-4 text-right">
            </div>
            <div class="col-6">
                <button type="submit" class="btn @(Model.Book.ID != 0 ? "btn-outline-primary" : "btn-outline-success")">
                    @(Model.Book.ID != 0 ? "Update" : "Create")
                </button>
                <a class="btn btn-link" asp-page="Index">Back To List</a>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}