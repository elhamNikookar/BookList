@page
@model MyBookList.Pages.BookList.EditModel
@{
}

<br/>
<h2 class="text-info">Edit Book '@Model.Book.Title'</h2>
<hr/>
<div class="border container" style="padding: 30px">
    <form method="post">
        <input type="hidden" asp-for="Book.ID"/>
        <div asp-validation-summary="All" ></div>
        <div class="form-group row">
            <div class="col-4 text-right">
                <label asp-for="Book.Title"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Title"/>
                <span asp-validation-for="Book.Title"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4 text-right">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author"/>
                <span asp-validation-for="Book.Author"></span>

            </div>
        </div>
        <div class="form-group row">
            <div class="col-4 text-right">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ISBN"/>
                <span asp-validation-for="Book.ISBN"></span>

            </div>
        </div>
        <div class="form-group row">
            <div class="col-4 text-right">
              
            </div>
            <div class="col-6">
                <input type="submit" value="Update" class="btn btn-outline-primary"/>
                <a class="btn btn-link" asp-page="Index">Back To List</a>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <partial name ="_ValidationScriptsPartial"/>
}
